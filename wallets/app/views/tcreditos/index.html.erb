<p id="notice"><%= notice %></p>

<h1>Tcreditos</h1>

<table>
  <thead>
    <tr>
      <th>Idcredito</th>
      <th>Valor</th>
      <th>Descripcion</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tcreditos.each do |tcredito| %>
      <tr>
        <td><%= tcredito.idcredito %></td>
        <td><%= tcredito.valor %></td>
        <td><%= tcredito.descripcion %></td>
        <td><%= tcredito.estado %></td>
        <td><%= link_to 'Show', tcredito %></td>
        <td><%= link_to 'Edit', edit_tcredito_path(tcredito) %></td>
        <td><%= link_to 'Destroy', tcredito, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

